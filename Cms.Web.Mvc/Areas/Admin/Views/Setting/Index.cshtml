@model List<SettingDto>

<div class="container text-center">
    <div class="row">
        <div class="col">
            <h1>Departmanlar</h1>
        </div>
    </div>
</div>


<p>
    <a asp-area="Admin" asp-controller="Setting" asp-action="Create" class="btn btn-primary ml-3">Yeni Oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">İsim</th>
            <th scope="col">Değer</th>
            <th scope="col">Ayarlar</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <th scope="row">@d.Id</th>
                <td>@d.Name</td>
                <td>@d.Value</td>
                <td>
                    <a asp-area="Admin" asp-controller="Setting" asp-action="Details" asp-route-id="@d.Id">Detay </a> |
                    <a asp-area="Admin" asp-controller="Setting" asp-action="Edit" asp-route-id="@d.Id">Düzenle</a> |
                    <a asp-area="Admin" asp-controller="Setting" asp-action="Delete" asp-route-id="@d.Id">Sil</a>
                </td>

            </tr>
        }
    </tbody>
</table>