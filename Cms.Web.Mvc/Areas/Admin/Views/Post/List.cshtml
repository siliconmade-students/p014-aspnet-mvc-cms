@model List<Models.Post> // Models.Post, projenizin Post model sınıfını temsil eder

@{
    ViewData["Title"] = "Post List";
}

<h2>Post List</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Content</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.Id</td>
                <td>@post.Title</td>
                <td>@post.Content</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = post.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = post.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
