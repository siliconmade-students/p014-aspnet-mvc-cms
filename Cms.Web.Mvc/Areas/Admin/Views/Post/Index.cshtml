@model List<PostDto>
<p>
<a asp-action="Create" class="btn btn-primary ml-3">Yeni Oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Başlık</th>
            <th scope="col">Kullanıcı</th>
            <th scope="col">Departman</th>
            <th scope="col">Ayarlar</th>

        </tr>
    </thead>
    <tbody>
        @foreach(var d in Model){
        <tr>
            <th scope="row">@d.Id</th>
            <td>@d.Title</td>
            <td>@d.User.Name @d.User.Surname</td>
               <td> @foreach (var c in d.Departments)
                {
                    <span class="me-2">@c.Name</span>
                }
                </td>
                <td><a asp-area="admin" asp-controller="Post" asp-action="Details" asp-route-id="@d.Id">Detay </a> | 
                    <a asp-area="admin" asp-controller="Post" asp-action="Edit" asp-route-id="@d.Id">Düzenle</a> | 
                    <a asp-area="admin" asp-controller="Post" asp-action="Delete" asp-route-id="@d.Id">Sil</a></td>
            
        </tr>
        }
    </tbody>
</table>