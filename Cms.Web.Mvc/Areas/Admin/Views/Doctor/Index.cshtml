@model List<DoctorDto>

<div class="container text-center">
    <div class="row">
        <div class="col">
            <h1>Departmanlar</h1>
        </div>
    </div>
</div>


<p>
    <a asp-action="Create" class="btn btn-primary ml-3">Yeni Oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">İsim Soyisim</th>
            <th scope="col">içerik</th>
            <th scope="col">Departman</th>
            <th scope="col">Doktor sorusu</th>
            <th scope="col"></th>

        </tr>
    </thead>
    <tbody>
        @foreach(var d in Model){
        <tr>
            <th scope="row">@d.Id</th>
            <td>@d.Name @d.Surname</td>
            <td>@d.Content</td>
            <td>@d.DepartmentDto.Name</td>
                <td><a asp-area="Admin" asp-controller="Doctor" asp-action="Details" asp-route-id="@d.Id">Detay </a> |
                    <a asp-area="Admin" asp-controller="Doctor" asp-action="Edit" asp-route-id="@d.Id">Düzenle</a> |
                    <a asp-area="Admin" asp-controller="Doctor" asp-action="Delete" asp-route-id="@d.Id">Sil</a>
                </td>
            
        </tr>
        }
    </tbody>
</table>