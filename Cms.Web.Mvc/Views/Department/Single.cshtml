@model DepartmentDto
@using Cms.Business.Services.Abstract;

@inject ISettingService _settingService
<section class="page-title bg-1">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="block text-center">
                    <span class="text-white">Departman detayları</span>
                    <h1 class="text-capitalize mb-5 text-lg">@Model.Name</h1>

                    <!-- <ul class="list-inline breadcumb-nav">
                      <li class="list-inline-item"><a href="index.html" class="text-white">Home</a></li>
                      <li class="list-inline-item"><span class="text-white">/</span></li>
                      <li class="list-inline-item"><a href="#" class="text-white-50">Department Details</a></li>
                    </ul> -->
                </div>
            </div>
        </div>
    </div>
</section>
<section class="section department-single">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="department-img">
					<img src="images/service/bg-1.jpg" alt="" class="img-fluid">
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-8">
				<img src="/images/service/@Model.CoverImagePath" alt="@Model.CoverImagePath" class="img-fluid">
				<div class="department-content mt-5">
					<h3 class="text-md">@Model.Name</h3>
					<div class="divider my-4"></div>
					<p class="lead">@Model.Description</p>
					<p>@Model.Content</p>

					<!--
					<h3 class="mt-5 mb-4">Services features</h3>
					<div class="divider my-4"></div>
					<ul class="list-unstyled department-service">
						<li><i class="icofont-check mr-2"></i>International Drug Database</li>
						<li><i class="icofont-check mr-2"></i>Stretchers and Stretcher Accessories</li>
						<li><i class="icofont-check mr-2"></i>Cushions and Mattresses</li>
						<li><i class="icofont-check mr-2"></i>Cholesterol and lipid tests</li>
						<li><i class="icofont-check mr-2"></i>Critical Care Medicine Specialists</li>
						<li><i class="icofont-check mr-2"></i>Emergency Assistance</li>
					</ul>
					-->
					<a asp-controller="Appointment" asp-action="Index" class="btn btn-main-2 btn-round-full">
						Randevu al <i class="icofont-simple-right ml-2  "></i>
					</a>
				</div>
			</div>

			<div class="col-lg-4">
				<div class="sidebar-widget schedule-widget mt-5">
					<h5 class="mb-4">Açık olduğumuz zamanlar</h5>

					<ul class="list-unstyled">
						<li class="d-flex justify-content-between align-items-center">
							<a href="#">Pazartesi - Cuma</a>
							<span>9:00 - 17:00</span>
						</li>
						<li class="d-flex justify-content-between align-items-center">
							<a href="#">Cumartesi</a>
							<span>9:00 - 16:00</span>
						</li>
						<li class="d-flex justify-content-between align-items-center">
							<a href="#">Pazar</a>
							<span>Kapalı</span>
						</li>
					</ul>

					<div class="sidebar-contatct-info mt-4">
						<p class="mb-0">Acil yardım mı lazım?</p>
						@{
							var telefon = _settingService.GetValueByName(SettingConstants.Telefon);
						}
						<h3 class="mt-2"><a href="tel:@telefon">@telefon</a></h3>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>