@model List<PostDto>
<section class="section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="row">
                    @foreach(PostDto item in Model){
                    <div class="col-lg-3 col-md-6 border border-2 rounded">
                        <article class="post-grid mb-5">
                            <a class="post-thumb mb-4 d-block" href="blog-single.html">
                                <img src="/images/f1.jpg" alt="" class="img-fluid w-100">
                            </a>
                            <span class="cat-name text-color font-extra text-sm text-uppercase letter-spacing-1"> @foreach(var c in item.Departments){@c.Name @(" ")} </span>
                            <h3 class="post-title mt-1"><a href="blog-single.html">@item.Title</a></h3>
                            <span class="text-muted letter-spacing text-uppercase font-sm">@item.CreatedAt</span>
                        </article>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>