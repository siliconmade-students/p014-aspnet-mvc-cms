@model List<PostDto>
<section class="page-title bg-1">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="block text-center">
                    <span class="text-white">Blog sayfamız</span>
                    <h1 class="text-capitalize mb-5 text-lg">Blog postları</h1>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="section blog-wrap">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-12 col-md-12 my-5">

                            <div class="blog-item">
                                <div class="blog-thumb">
                                    <img src="images/blog/@item.PostImageDto.ImagePath" alt="" class="img-fluid ">
                                </div>

                                <div class="blog-item-content">
                                    <div class="blog-item-meta mb-3 mt-4">
                                        <span class="text-muted text-capitalize mr-3"><i class="icofont-comment mr-2"></i>@(
                                        item.Comments == null ? "": item.Comments.Count
                                        )</span>
                                        <span class="text-black text-capitalize mr-3"><i class="icofont-calendar mr-1"></i> @item.CreatedAt</span>
                                    </div>

                                    <h2 class="mt-3 mb-3"><a asp-controller="Blog" asp-action="detail" asp-route-id="@item.Id">@item.Title</a></h2>

                                    <a asp-controller="Blog" asp-action="detail" asp-route-id="@item.Id" target="_blank" class="btn btn-main btn-icon btn-round-full">Devam oku <i class="icofont-simple-right ml-2  "></i></a>
                                </div>
                            </div>

                        </div>
                    }

                    <div class="col-lg-12 col-md-12">
                        <nav class="pagination py-2 d-inline-block">
                            <div class="nav-links">
                                <span aria-current="page" class="page-numbers current">1</span>
                                <a class="page-numbers" asp-controller="Blog" asp-route-page="2">2</a>
                                <a class="page-numbers" asp-controller="Blog" asp-route-page="3">3</a>
                                <a class="page-numbers" asp-controller="Blog" asp-route-page=""><i class="icofont-thin-double-right"></i></a>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="sidebar-wrap pl-lg-4 mt-5 mt-lg-0">
                    <div class="sidebar-widget search  mb-3 ">
                        <h5>Search Here</h5>
                        <form action="#" class="search-form">
                            <input type="text" class="form-control" placeholder="search">
                            <i class="ti-search"></i>
                        </form>
                    </div>


                    <div class="sidebar-widget latest-post mb-3">
                        <h5>Popular Posts</h5>

                        <div class="py-2">
                            <span class="text-sm text-muted">03 Mar 2018</span>
                            <h6 class="my-2"><a href="#">Thoughtful living in los Angeles</a></h6>
                        </div>

                        <div class="py-2">
                            <span class="text-sm text-muted">03 Mar 2018</span>
                            <h6 class="my-2"><a href="#">Vivamus molestie gravida turpis.</a></h6>
                        </div>

                        <div class="py-2">
                            <span class="text-sm text-muted">03 Mar 2018</span>
                            <h6 class="my-2"><a href="#">Fusce lobortis lorem at ipsum semper sagittis</a></h6>
                        </div>
                    </div>

                    <div class="sidebar-widget category mb-3">
                        <h5 class="mb-4">Departments</h5>

                        <ul class="list-unstyled">
                            <li class="align-items-center">
                                <a href="#">Medicine</a>
                                <span>(14)</span>
                            </li>
                            <li class="align-items-center">
                                <a href="#">Equipments</a>
                                <span>(2)</span>
                            </li>
                            <li class="align-items-center">
                                <a href="#">Heart</a>
                                <span>(10)</span>
                            </li>
                            <li class="align-items-center">
                                <a href="#">Free counselling</a>
                                <span>(5)</span>
                            </li>
                            <li class="align-items-center">
                                <a href="#">Lab test</a>
                                <span>(5)</span>
                            </li>
                        </ul>
                    </div>


                    <div class="sidebar-widget tags mb-3">
                        <h5 class="mb-4">Tags</h5>

                        <a href="#">Doctors</a>
                        <a href="#">agency</a>
                        <a href="#">company</a>
                        <a href="#">medicine</a>
                        <a href="#">surgery</a>
                        <a href="#">Marketing</a>
                        <a href="#">Social Media</a>
                        <a href="#">Branding</a>
                        <a href="#">Laboratory</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>