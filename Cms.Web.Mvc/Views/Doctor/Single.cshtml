@model DoctorDto
<section class="section doctor-single">
	<div class="container">
		<div class="row">
			<div class="col-lg-4 col-md-6">
				<div class="doctor-img-block">
					<img src="~/images/team/@Model.ImagePath" alt="" class="img-fluid w-100">

					<div class="info-block mt-4">
						<h4 class="mb-0">@Model.Name @Model.Surname</h4>
						<p>@Model.DepartmentDto.Name</p>

					</div>
				</div>
			</div>

			<div class="col-lg-8 col-md-6">
				<div class="doctor-details mt-4 mt-lg-0">
					<h2 class="text-md">Ben kimim?</h2>
					<div class="divider my-4"></div>
					<p>
						@Model.Content
					</p>

					<a asp-action="Index" asp-controller="Appoinment" class="btn btn-main-2 btn-round-full mt-3">
						Randevu al<i class="icofont-simple-right ml-2  "></i>
					</a>
				</div>
			</div>
		</div>
	</div>
</section>